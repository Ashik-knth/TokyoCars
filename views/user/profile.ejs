<div class="profile-container">
    <h1 class="profile-heading">Profile Settings</h1>
    
    <% if (success && Object.keys(success).length > 0) { %>
    
        <p class="success-message" ><%= success%></p>
      <% } %>

      <% if (errors && errors.username_error) { %>
        <p class="error-message"><%= errors.username_error %></p>
    <% } %>

    <% if (errors && errors.phone_error) { %>
        <p class="error-message"><%= errors.phone_error %></p>
    <% } %>

    <form action="/profile-update/<%= userprofile._id %>" method="POST" >
        <div class="input-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" placeholder="Enter your username" value="<%= userprofile.username %>">
        </div>
        
        <div class="input-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Enter your email" value="<%= userprofile.email %>" readonly >
        </div>
        
        <div class="input-group">
            <label for="phone">Phone Number</label>
            <input type="tel" id="phone" name="phone" placeholder="Enter your phone number" value="<%= userprofile.phone %>">
        </div>
        
        <button type="submit" class="save-button">Save Changes</button>
    </form>
</div>