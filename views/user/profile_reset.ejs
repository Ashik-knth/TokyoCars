<div class="profile-reset-container">
    <div class="profile-reset-logo">
        <div class="profile-reset-logo-circle">R</div>
    </div>
    <h1 id="profile-reset-heading" >Reset Password</h1>
    <p id="profile-reset-description" >Enter your email address and we'll send you instructions to reset your password.</p>
    <form id="profile-reset-form" action="/profile-reset" method="post" >

      
         
        <div class="profile-reset-input-group">
            <% if (errors && errors.email_error) { %>
                <p class="error-message" style="color: red; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; text-align: center;" ><%= errors.email_error %></p>
            <% } %>
            <p id="error-message"><%= errors.error %></p>
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" placeholder="Enter your email" >
        </div>
        <button id="profile-reset-button" type="button"  onclick="Validation(event)" >Send Reset </button>

      
    </form>
    <!-- <div class="profile-reset-back-link">
        <a href="/profile-reset-otp">Back to Login</a>
    </div> -->
</div>



<script>

function Validation(event) {
    event.preventDefault();
    var email = document.getElementById("email").value;
    var error = document.getElementById('error-message');
    if (email === "") {
        error.textContent = "Please enter your email address.";
        error.style.color = "red";
        return false;
    } else if(email.includes(" ")){
        error.textContent = "Please enter a valid email address.";
        error.style.color = "red";
        return false;
    }else{
        document.getElementById("profile-reset-form").submit();
    }
}





</script>